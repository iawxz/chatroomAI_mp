.legislation_detail {
  width: 100%;
  min-height: 100vh;
  background: #F2F2F2;
}
.legislation_detail .content {
  position: relative;
  padding: 35rpx 54rpx;
}
.legislation_detail .content .title {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #3D3D3D;
  opacity: 0.9;
  display: block;
  margin-bottom: 42rpx;
}
.legislation_detail .content .keywords {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  margin-bottom: 24rpx;
}
.legislation_detail .content .keywords text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #000000;
  opacity: 0.7;
  display: block;
  margin-right: 27rpx;
}
.legislation_detail .content .keywords .key {
  padding: 10rpx;
  background: #E6F2FF;
  border-radius: 6rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #000000;
  opacity: 0.6;
  margin-right: 18rpx;
}
.legislation_detail .content .text text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #000000;
  opacity: 0.7;
  display: block;
  margin-bottom: 30rpx;
}
.legislation_detail .content .text .textContent {
  margin-left: 26rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #3E3E3E;
  line-height: 36rpx;
  opacity: 0.7;
}

