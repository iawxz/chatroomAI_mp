.content {
  width: 100%;
  min-height: 100vh;
  background-color: #f2f2f2;
}
.content .chatWindow {
  width: 100%;
  min-height: 92vh;
  height: 100%;
  background-color: #f2f2f2;
}
.content .inputBlock {
  width: 100%;
  height: 8vh;
}
.content .chatInput {
  width: 100%;
  min-height: 8vh;
  position: fixed;
  left: 0;
  bottom: 0;
  -webkit-transform: translateY(200rpx);
          transform: translateY(200rpx);
}
.content .chatInput .inputBox {
  width: 100%;
  height: 8vh;
  background-color: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}
.content .chatInput .inputBox image {
  width: 66rpx;
  height: 66rpx;
}
.content .chatInput .inputBox .textarea {
  width: 80%;
  height: 66rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background: #F2F2F2;
  border-radius: 33rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.content .chatInput .inputBox .textarea input {
  width: 100%;
}
.content .chatInput .toolBox {
  width: 100%;
  height: 198rpx;
  background-color: #FFFFFF;
  border-top: 2px solid rgba(0, 0, 0, 0.3);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.content .chatInput .toolBox .tool {
  width: 120rpx;
  height: 130rpx;
  background: #FFFFFF;
  box-shadow: 0rpx -1rpx 21rpx 0rpx rgba(0, 0, 0, 0.11);
  border-radius: 10rpx;
  margin: 0 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.content .chatInput .toolBox .tool image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}
.content .chatInput .toolBox .tool text {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(0, 0, 0, 0.8);
}
.content .toolShow {
  -webkit-animation: toolShow linear 0.5s;
          animation: toolShow linear 0.5s;
  -webkit-transform: translateY(0);
          transform: translateY(0);
}
.content .toolHide {
  -webkit-animation: toolHide linear 0.5s;
          animation: toolHide linear 0.5s;
  -webkit-transform: translateY(200rpx);
          transform: translateY(200rpx);
}
@-webkit-keyframes toolShow {
from {
    -webkit-transform: translateY(200rpx);
            transform: translateY(200rpx);
}
to {
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
}
@keyframes toolShow {
from {
    -webkit-transform: translateY(200rpx);
            transform: translateY(200rpx);
}
to {
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
}
@-webkit-keyframes toolHide {
from {
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
to {
    -webkit-transform: translateY(200rpx);
            transform: translateY(200rpx);
}
}
@keyframes toolHide {
from {
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
to {
    -webkit-transform: translateY(200rpx);
            transform: translateY(200rpx);
}
}

